{
  "openapi": "3.0.1",
  "info": {
    "title": "Clasificador Pilar 4",
    "version": "1.0",
    "description": "API que clasifica respuestas de estudiantes del Pilar 4 en Pre-aprobado, Revisi√≥n o Descartado."
  },
  "paths": {
    "/classify": {
      "post": {
        "summary": "Clasifica respuestas del Pilar 4",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Archivo Excel clasificado",
            "content": {
              "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    }
  }
}
